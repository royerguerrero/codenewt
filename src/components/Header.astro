---
import { Image } from "astro:assets";

import Navbar from "./Navbar.astro";

import logo from "../images/Logo.svg";
---

<header class="fixed bottom-4 w-screen z-50">
  <div
    class="container flex p-4 m-auto backdrop-blur-3xl bg-white/10 rounded-lg border border-graphite"
  >
    <a href="/" class="contents">
      <Image
        class="mr-4 pr-4 border-r"
        src={logo}
        width="120px"
        alt="CodeNewt Agency Logo"
      />
    </a>
    <Navbar />
  </div>
</header>
